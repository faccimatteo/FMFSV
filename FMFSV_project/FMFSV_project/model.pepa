EnvironmentFair 			= (mineEnvironmentFair, (numFairMiners - 1) * rateMining).VerifierEnvironment2 + (mineFair, infty).VerifierEnvironment1 + (mineUnfair, infty).VerifierEnvironmentUnfair + (mineEnvironmentUnfair, infty).VerifierEnvironmentUnfair;
VerifierEnvironment1 		= (verifyFair,rateVerification).EnvironmentFair + (mineFair, infty).VerifierEnvironment1 + (mineUnfair, infty).VerifierEnvironmentUnfair + (mineEnvironmentUnfair, infty).VerifierEnvironmentUnfair;
VerifierEnvironment2 		= (verifyEnvironmentFair, rateVerification).EnvironmentFair + (mineEnvironmentFair, rateMining).VerifierEnvironment2 + (mineUnfair, infty).VerifierEnvironmentUnfair + (mineEnvironmentUnfair, infty).VerifierEnvironmentUnfair;
VerifierEnvironmentUnfair 	= (verifyUnfair, rateVerification).EnvironmentFair + (mineUnfair, infty).VerifierEnvironmentUnfair + (mineEnvironmentUnfair, infty).VerifierEnvironmentUnfair;
/* System equation */
(MinerUnfair <mineFair, mineEnvironmentFair, mineUnfair, mineEnvironmentUnfair> EnvironmentUnfair) <mineFair, mineEnvironmentFair, mineUnfair, mineEnvironmentUnfair> (MinerFair <mineFair, mineEnvironmentFair, verifyEnvironmentFair, mineUnfair, mineEnvironmentUnfair, verifyUnfair> EnvironmentFair)